{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "SDL2",
            "command": "C:/msys64/ucrt64/bin/g++.exe",
            "args": [
                "-g",
                "src\\main.cpp",
                "src\\render.cpp",
                "src\\desert.cpp",
                "src\\loader.cpp",
                "src\\poly.cpp",
                "-o",
                "build\\game.exe",
                "-IC:/tools/SDL2-2.30.11/x86_64-w64-mingw32/include",
                "-LC:/tools/SDL2-2.30.11/x86_64-w64-mingw32/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-mwindows"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}